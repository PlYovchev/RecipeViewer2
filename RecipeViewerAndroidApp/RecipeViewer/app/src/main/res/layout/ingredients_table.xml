<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/table_vertical_margin"
    android:paddingLeft="@dimen/table_horizontal_margin"
    android:paddingRight="@dimen/table_horizontal_margin"
    android:paddingTop="@dimen/table_vertical_margin" >

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/header_border_shape" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/table_header_item_vertical_margin"
            android:paddingBottom="@dimen/table_header_item_vertical_margin"
            android:id="@+id/productHeaderLabel"
            android:text="Product"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:background="@drawable/table_row_border_shape" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/table_header_item_vertical_margin"
            android:paddingBottom="@dimen/table_header_item_vertical_margin"
            android:id="@+id/quantityHeaderLabel"
            android:text="Quantity"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:background="@drawable/table_row_border_shape"/>
    </TableRow>


</TableLayout>
