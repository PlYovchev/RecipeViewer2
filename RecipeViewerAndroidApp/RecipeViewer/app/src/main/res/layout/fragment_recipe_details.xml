<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.plt3ch.recipeviewer.Fragments.RecipeDetailsFragment"
    android:background="#91c2c5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recipeDetailsScrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:fontFamily="sans-serif"
                android:id="@+id/detailsTitleTextView"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp" />

            <ImageView
                android:layout_width="280dp"
                android:layout_height="150dp"
                android:id="@+id/detailsImageView"
                android:layout_below="@+id/detailsTitleTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/detailsAuthorTextView"
                android:layout_below="@+id/detailsImageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detailsIngredientslistView"
                android:layout_below="@+id/detailsAuthorTextView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:padding="15dp"
                android:gravity="center"
                android:singleLine="false"
                android:id="@+id/detailsDescriptionTextView"
                android:layout_below="@+id/detailsIngredientslistView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>

